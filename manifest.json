{
  "manifest_version": 2,
  "name": "Count Down Closer",
  "version": "1.0",
  "description": "Set a timer to close down procrastination sites",
  "permissions": ["tabs", "background"],
  "background": {
        "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
	"default_popup": "popup.html"	
  }
}